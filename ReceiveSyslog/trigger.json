{
  "name": "ReceiveSyslog",
  "title": "Receive Syslog",
  "version": "0.0.1",
  "type": "flogo:trigger",
  "ref": "github.com/TIBCOSoftware/lmi-flogo-collectors/ReceiveSyslog",
  "description": "This enable the reception of TCP or UDP Syslog messages and triggers on each new message",
  "author": "Laurent Pautet <lpautet@tibco.com>",
  "settings":[
    {
      "name": "protocol",
      "type": "string",
      "value": "default"
    },
    {
      "name": "port",
      "type": "integer",
      "value": "514"
    }
  ],
  "output": [
    {
      "name": "output",
      "type": "string"
    },
    {
      "name": "severity",
      "type": "integer"
    },
    {
      "name": "facility",
      "type": "integer"
    },
    {
      "name": "sourceIP",
      "type": "string"
    },
    {
      "name": "source",
      "type": "string"
    },
    {
      "name": "eventTime",
      "type": "long"
    },
    {
      "name": "message",
      "type": "string"
    }
  ],
  "handler": {
    "settings": [
      {
        "name": "regexp",
        "type": "string"
      }
    ]
  }
}